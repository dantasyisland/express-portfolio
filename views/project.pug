extends layout.pug

block content

  nav.nav
    a(href='/')
      span &larr;
      |  Back

  article.portfolio-projects
    .inner-wrapper.flex-row-wrap.two-col
      .project-info-box.box
        h1 #{project_name}
        ul
        p #{description}

      .project-tech-links-box.box
        h6 Technologies
        ul
          each technology in technologies ? technologies : ['There are no values']
            li= technology
        a.btn-link(href=live_link, target="_blank") Live Demo
        a.btn-link(href=github_link, target="_blank") GitHub Repo

    .project-img-box.box
      each image in image_urls
        img.project-img(src=image, alt=`Picture of ${project_name}`)

    nav.nav
      a(href='/')
        span &larr;
        |  Back
