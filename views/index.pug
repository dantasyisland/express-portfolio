extends layout.pug

block content

  article.portfolio-intro

    h1 Danny's Portfolio Extravaganza
    p Behold my precious work!

  article.portfolio-project-thumbs
    .projects-box.box.grid
      each project in projects ? projects : ['There are no values']
        .cell
          a(href=`/projects/${project.id}`)
            img.thumbnail(src=`${project.image_urls[0]}` alt=`Picture of ${project.project_name}`)
            h5 #{project.project_name}
